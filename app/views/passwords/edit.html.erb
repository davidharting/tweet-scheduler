<h1>Edit your password</h1>

<%= form_with model: Current.user, url: edit_password_path do |form| %>
  <%= render("shared/form_errors", form: form) %>

  <div class='mb-3'>
    <%= form.label :password %>
    <%= form.password_field :password, class: "form-control", placeholder: "Your strong password" %>
  </div>
  <div class='mb-3'>
    <%= form.label :password_confirmation %>
    <%= form.password_field :password_confirmation, class: "form-control", placeholder: "Your strong password" %>
  </div>
  <div class='mb-3'>
    <%= form.submit "Update password", class: "btn btn-primary" %>
  </div>
<% end %>
