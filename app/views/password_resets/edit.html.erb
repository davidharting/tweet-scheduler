<h1>Reset your password</h1>

<%= form_with model: @user, url: password_reset_edit_path(token: params[:token]), method: :patch do |form| %>

  <% if form.object.errors.full_messages.length > 0 %>
    <div class='alert alert-danger'>
      <% form.object.errors.full_messages.each do |m| %>
        <div><%= m %></div>
      <% end %>
    </div>
  <% end %>

  <div class='mb-3'>
    <%= form.label :password %>
    <%= form.password_field :password, class: "form-control", placeholder: "Your shiny new password" %>
  </div>
  <div class='mb-3'>
    <%= form.label :password_confirmation %>
    <%= form.password_field :password_confirmation, class: "form-control", placeholder: "Do it again!" %>
  </div>
  <div class='mb-3'>
    <%= form.submit "Set new password", class: "btn btn-primary" %>
  </div>
<% end %>