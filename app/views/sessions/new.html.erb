<h1>Sign In</h1>

<%= form_with url: signin_path do |form| %>
  <div class='mb-3'>
    <%= form.label :email %>
    <%= form.text_field :email, class: "form-control", placeholder: "steve@gmail.com" %>
  </div>
  <div class='mb-3'>
    <%= form.label :password %>
    <%= form.password_field :password, class: "form-control", placeholder: "Your strong password" %>
  </div>
  <div class='mb-3'>
    <%= form.submit "Sign in", class: "btn btn-primary" %>
  </div>
<% end %>